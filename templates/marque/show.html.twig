{% extends 'base.html.twig' %}

{% block body %}
	<div class="container w-50">
		<div class="py-5 text-center">
			<img src="{{ asset('uploads/' ~ uneMarque.logo) }}" class="img-fluid img-thumbnail w-25 d-block mx-auto mb-4" alt="...">
			<p class="lead">Modifier votre marque.</p>
		</div>

		<div class="row g-5">
			<div class="col-md-4 col-lg-4 order-md-last">
				<h4 class="d-flex justify-content-between align-items-center mb-3">
					<span class="text-primary">La marque
					</span>
				</h4>
				<ul class="list-group mb-3">
					<li class="list-group-item d-flex justify-content-between lh-sm">
						<div>
							<h6 class="my-0">Nom
							</h6>
						</div>
						<span class="text-muted">{{uneMarque.nom}}</span>
					</li>
					<li class="list-group-item d-flex justify-content-between lh-sm">
						<div>
							<h6 class="my-0">Date
							</h6>
						</div>
						<span class="text-muted">{{uneMarque.dateCreation|date('Y-m-d')}}</span>
					</li>
				</ul>
			</div>
			<div class="col-md-7 col-lg-7 order-md-last">
				<h4 class="d-flex justify-content-between align-items-center mb-3">
					<span class="text-primary">Modifications
					</span>
				</h4>
                {{form(edit)}}
			</div>
		</div>
	</div>
{% endblock %}
